<Window x:Class="TermoWifi.Hysteresys_cfg"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="TermoWifi" 
        WindowStartupLocation="CenterScreen"
	WindowStyle="None"	
	Height="300"
	Width="300">
	<Window.Background>
		<ImageBrush
			Opacity="0.3"
			ImageSource="drawable\part_config_bg.jpg"></ImageBrush>
	</Window.Background>
	<DockPanel
		LastChildFill="False">
		<Button			
			Content="Close"
			DockPanel.Dock="Bottom"
			Click="CloseButton_Click" />
		
		<Border
			DockPanel.Dock="Top">
			<Border.Effect>
				<DropShadowEffect
					ShadowDepth="5" />
			</Border.Effect>
			<Label
				Name="lblHyst"
				Foreground="White"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				FontSize="40"
				Height="60" />
		</Border>	
<Slider
			DockPanel.Dock="Top"
			Name="slHyst"			
			ValueChanged="slValueChanged"
			Margin="30,10,30,10" />	
	</DockPanel>
</Window>