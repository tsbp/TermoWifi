<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="TermoWifi.Hysteresys_cfg" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="TermoWifi"
	WindowStartupLocation="CenterScreen"
	WindowStyle="None"
	Width="300"
	Height="168">
	<Window.Background>
		<ImageBrush
			Opacity="0.3"
			ImageSource="drawable\part_config_bg.jpg"></ImageBrush>
	</Window.Background>
	<DockPanel
		MouseDown="wMove"
		LastChildFill="False">
		<Button
			Content="Close"
			DockPanel.Dock="Bottom"
			Click="CloseButton_Click" />
		<Border
			DockPanel.Dock="Top"
			Margin="0,10,0,0">
			<Border.Effect>
				<DropShadowEffect
					ShadowDepth="5" />
			</Border.Effect>
			<Label
				Name="lblHyst"
				Foreground="White"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				FontSize="40"
				Height="60" />
		</Border>
		<Slider
			DockPanel.Dock="Top"
			Name="slHyst"
			ValueChanged="slValueChanged"
			Margin="30,10,30,10" 
			SmallChange="0.1"
			TickFrequency="0.1"
			Maximum="2.5"
			Minimum="0"/>
	</DockPanel>
</Window>